{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ weather.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ weather.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temp_night</th>
                <td>{{ weather.tempNight }} &#8451;</td>
            </tr>
            <tr>
                <th>Temp_day</th>
                <td>{{ weather.tempDay }} &#8451;</td>
            </tr>
            <tr>
                <th>Rain_prob</th>
                <td>{{ weather.rainProb }} %</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather.windSpeed }} km/h</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_controller_crud_index') }}">back to list</a>

    <a href="{{ path('app_weather_controller_crud_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather_controller_crud/_delete_form.html.twig') }}
{% endblock %}
