{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block pageTitle %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class=" p-4" action="{{ path('login') }}" method="post">
        <label class="form-label" for="username">Login:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />

        <label class="form-label" for="password">Password:</label>
        <input class="form-control" type="password" id="password" name="_password" />

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/cities-crud" />

        <button class="btn btn-dark mt-3" type="submit">Login</button>

    </form>

{% endblock %}
